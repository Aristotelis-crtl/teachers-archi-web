enum Status {
  EC
  PRAG
  PAST
  VAC
  CDE
  ATER
}

model User {
  id        String     @id @default(auto()) @map("_id") @db.ObjectId
  firstName String
  lastName  String
  username  String     @unique
  password  String
  status    Status
  Enseigne  Enseigne[]
}

model Enseigne {
  id        String @id @default(auto()) @map("_id") @db.ObjectId
  userId    String @db.ObjectId
  uEId      String @db.ObjectId
  heuresCM  Float?
  heuresTD  Float?
  heuresTP  Float?
  groupesCM Float?
  groupesTD Float?
  groupesTP Float?
  ue        UE     @relation(fields: [uEId], references: [id])
  user      User   @relation(fields: [userId], references: [id])
}

model UE {
  id        String     @id @default(auto()) @map("_id") @db.ObjectId
  formation String
  semestre  Int
  ref       String
  intitule  String
  status    String
  heuresCM  Float?
  heuresTD  Float?
  heuresTP  Float?
  effectif  Int?
  groupesCM Float?
  groupesTD Float?
  groupesTP Float?
  Enseigne  Enseigne[]
}
